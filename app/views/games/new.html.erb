<div class="container">
  <h1>SLEEP AHEAD! HERE COMES THE ONE AND ONLY BORING FRANCE 3 GAME!</h1>
  <p></p>
  <div class="flexed">
    <% @letters.each do |letter| %>
    <div class="letter-box">
      <%= letter %>
    </div>
  <% end  %>
</div>

<form action="/score" method="post">
  <input type="text" name="word" placeholder="What is your word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit">
</form>

</div>
